// CSS Style Guide: https://codeguide.co/#css


$scheme = hexo-config('scheme') ? hexo-config('scheme') : 'Muse';


// Variables Layer
// --------------------------------------------------
@import '_variables/base';
@import '_variables/' + $scheme;
for $inject_variable in hexo-config('injects.variable')
  @import $inject_variable;

// Mixins Layer
// --------------------------------------------------
@import '_mixins';
for $inject_mixin in hexo-config('injects.mixin')
  @import $inject_mixin;

// Dark mode colors
// --------------------------------------------------
@import '_colors';

// Common Layer
// --------------------------------------------------

// Scaffolding
@import '_common/scaffolding';

// Layout
@import '_common/outline';

// Components
@import '_common/components';


// Schemes Layer
// --------------------------------------------------
@import '_schemes/' + $scheme;


// Custom Layer
// --------------------------------------------------
for $inject_style in hexo-config('injects.style')
  @import $inject_style;


//
// --------------------------------------------------
if hexo-config("base16") && hexo-config("base16.enable")
  // if hexo-config("highlight.enable") && !hexo-config("js.enable")
  @import "_base16extensions/_hljs/" + (hexo-config("base16.scheme.highlight") || "altercation") + "-light.styl"
  if hexo-config("darkmode")
    @media (prefers-color-scheme: dark)
      @import "_base16extensions/_hljs/" + (hexo-config("base16.scheme.highlight") || "altercation") + "-dark.styl"
